{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // REVIEW: can this be updated to "NodeNext"?
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "outDir": "out",
    "sourceMap": true,
    // strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src", "test"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "test/examples",
    "test/results",
    "test/suite/scratchpad.js"
  ]
}
